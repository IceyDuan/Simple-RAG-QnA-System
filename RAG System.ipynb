   "source": [
    "# Load and process the data\n",
    "CSVloader = CSVLoader(file_path=\"All_Diets.csv\", encoding=\"utf-8\")\n",
    "data = CSVloader.load()\n",
    "# Each line is a document\n",
    "documents = data"
   ]
  },
